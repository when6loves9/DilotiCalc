<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#006699">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/ChooseGame"
        android:id="@+id/LogoText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textColor="#FFFFFF" />


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select1"
        android:id="@+id/checkBox51"
        android:layout_marginTop="41dp"
        android:checked="false"
        android:layout_below="@+id/LogoText"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select2"
        android:id="@+id/checkBox61"
        android:checked="true"
        android:layout_below="@+id/checkBox51"
        android:layout_alignLeft="@+id/checkBox51"
        android:layout_alignStart="@+id/checkBox51" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/StartPlay"
        android:id="@+id/StartBtn"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxPlus"
        android:layout_below="@+id/checkBox61"
        android:layout_alignLeft="@+id/checkBox61"
        android:layout_alignStart="@+id/checkBox61" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:textSize="15dp"
        android:ems="10"
        android:id="@+id/PlusNumber"
        android:editable="true"
        android:focusable="false"
        android:layout_alignBottom="@+id/checkBoxPlus"
        android:layout_toRightOf="@+id/checkBoxPlus"
        android:layout_alignRight="@+id/StartBtn"
        android:layout_alignEnd="@+id/StartBtn" />


</RelativeLayout>
